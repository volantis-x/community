  <entry>
    <title>Hexo Volantis Snippets的vscode扩展</title>
    <link href="https://volantis.js.org/blogs/2023-05-10-hexo-volantis-snippets/"/>
    <id>https://volantis.js.org/blogs/2023-05-10-hexo-volantis-snippets/</id>
    <published>2023-05-10T00:00:00.000Z</published>
    <updated>2023-05-10T00:00:00.000Z</updated>
    
